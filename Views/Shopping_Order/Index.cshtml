@model IEnumerable<Shopping_Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h2 class="text-info"style="margin-top:50px">طلبات شراء العملاء</h2>

<table class="table table-striped border">
    <thead style="background-color:aqua">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.code_order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time_order)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.pr_oname)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.code_order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.time_order)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.pr_oname)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
               
                <a asp-action="Details"class="btn btn-primary" asp-route-id="@item.shopping_id">التفاصيل
                <i class="fa fa-list"></i>
                </a> 
                <a asp-action="Delete"class="btn btn-danger" asp-route-id="@item.shopping_id"onclick="return confirm('هل تريد حذف المنتج المحدد')">
                    حذف
                    <i class="fa fa-trash-o"></i>

                </a>
            </td>
        </tr>
}
    </tbody>
</table>
