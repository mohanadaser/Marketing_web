@model IEnumerable<Products>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<br />
<div>
    <a asp-action="Create" class="btn btn-primary">
        انشاء جديد
        <i class="fa fa-plus"></i>
    </a>
</div>
<hr />

<table class="table table-bordered table-striped table-hover"style="margin-top:50px;"id="mytable">
    <thead style="background-color:aquamarine;" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.proname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.proimg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prodesc)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productType.proytpe)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.proname)
            </td>
            <td>

                <img src="~/img/mypro/@item.proimg" width="80" height="60" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prodesc)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.productType.proytpe)
            </td>

            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.pro_id">
                    تعديل
                    <i class="fa fa-edit"></i>
                </a>

                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.pro_id"onclick="return confirm('هل تريد حذف العنصر المحدد')">
                    حذف
                    <i class="fa fa-trash-o"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="form-group">
    <a asp-action="ProductsReports"asp-controller="Reports"target="_blank"class="btn btn-primary"value="طباعه"style="font-size:large;">طباعه</a>
</div>
@section scripts{ 

<script src="~/js/site.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#mytable').DataTable();
        });
    </script>
}

