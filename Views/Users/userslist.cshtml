@model IEnumerable<Users>

@{
    ViewData["Title"] = "userslist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h1 class="text-info" style="margin-top:30px;">عرض جميع المشتركين</h1>

<hr />
<table class="table table-striped table-bordered table-hover"id="mytable">
    <thead class="text-white" style="background-color:#0026ff">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>

                <td>

                    <a asp-action="Deleteusers" class="btn btn-danger" asp-route-id="@item.id"onclick="return confirm('هل تريد حذف العنصر المحدد؟')"><i class="fa fa-trash-o"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{

    <script src="~/js/site.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#mytable').DataTable();
        });
    </script>
}
