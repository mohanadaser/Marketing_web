@model Products
@{
    ViewData["Title"] = "details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="container"style="margin-top:15px;">
    <h2 class="text-info">تفاصيل المنتج</h2>
</div>
<form asp-action="details" method="post" enctype="multipart/form-data" asp-controller="home">
    <div class="row">
        <div class="col-8">
            <div class="form-group  ">

                <div class="col-8">
                    <input type="hidden" asp-for="pro_id" class="form-control" />
                </div>

            </div>

            <div class="form-group row ">
                <div class="col-4">
                    <label asp-for="proname"></label>

                </div>
                <div class="col-8">
                    <input asp-for="proname"readonly="readonly" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="prodesc"></label>

                </div>
                <div class="col-8">
                    <textarea asp-for="prodesc" class="form-control"readonly="readonly"></textarea>
                </div>

            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="typeid" class="control-label">نوع المنتج</label>

                </div>
                <div class="col-8">
                    <select asp-for="typeid" asp-items="ViewBag.typeid"disabled="disabled" class="form-control"></select>
                    @*<input asp-for="typeid" class="form-control" />*@
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="price" class="control-label">سعر المنتج</label>
                   
                </div>
                <div class="col-8">
                    <input asp-for="price" readonly="readonly" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">


                </div>
                <div class="col-4">
                    <a class="btn btn-success"  asp-route-id="@Model.pro_id" asp-action="addtocart">اضف الى سلة المشتريات
                        <i class="fa fa-shopping-cart"></i>
                    </a>
                   
                </div>
                <div class="col-4">
                    <a asp-action="index" class="btn btn-primary">الرجوع الى الصفحه الرئيسيه</a>
                </div>
               

            </div>


        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="/img/mypro/@Model.proimg" alt="image"width="300"height="400" style="border-radius:5px;border:1px solid #ffffff" />
        </div>
    </div>


</form>



