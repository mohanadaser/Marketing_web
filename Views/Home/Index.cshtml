@model IEnumerable<Products>
@*@model ReflectionIT.Mvc.Paging.PagingList<Products>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging*@

@{
    ViewData["Title"] = "Home Page";
}
<br />
<br />

<div class="row">
    <div class="col-md-2"style="margin-top:200px;">
        <div class="dropdown show">
            <a class="btn btn-outline-info dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                اختار الفئه والاصناف
            </a>
            @await Component.InvokeAsync("menucategory")
        </div>
    </div>
   

    <div class="col-md-10">

        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" style="background-color:#808080;height:300px">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/img/cover/mocover1.png" alt="First slide" style="height:300px">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/img/cover/mocver.png" alt="Second slide" style="height:300px">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/img/cover/mcover3.png" alt="Third slide" style="height:300px">
                </div>
            </div>
        </div>


    </div>


</div>
    <br />
    @*<nav>
            @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
        </nav>*@

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card-mb-4">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal text-center">
                            <label style="font-size:23px;color:steelblue;">@item.proname</label>
                        </h4>
                        <img src="/img/mypro/@item.proimg" alt="card image" class="card-img-top" style="height:200px;" />
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <label style="font-size:20px;color:#ff0000">السعر:@item.price</label>

                                </div>
                                <a asp-action="details" asp-route-id="@item.pro_id" class="btn btn-primary pull-right btn-outline-info"style="margin:10px">التفاصيل</a>
                            </div>

                        </div>

                    </div>


                </div>

            </div>

        }


    </div>
